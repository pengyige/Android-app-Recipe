<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f5ec"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="#d5c59f"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >
        <EditText
            android:id="@+id/et_recipeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:hint="@string/input_recipe_name"
            android:focusedByDefault="true"
            />
        <Button
            android:id="@+id/btn_OK"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/sou"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"

        android:background="#ffc20e"
        >

        <TextView
            android:id="@+id/tv_AllType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recipe_type"
            android:textColor="@color/colorPrimary"
            android:textAppearance="?android:attr/textAppearanceLarge"
            />
        <ListView
            android:id="@+id/lv_recipeType"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_AllType"

            ></ListView>

        <ListView
            android:id="@+id/lv_recipeName"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:layout_toRightOf="@+id/lv_recipeType"
            android:visibility="gone"
            >

        </ListView>


    </RelativeLayout>


</LinearLayout>